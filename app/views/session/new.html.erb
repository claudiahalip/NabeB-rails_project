<h2>Login</h2>

<%=form_tag '/login' do %>
  <%=label_tag :username%><br>
  <%=text_field_tag :username%><br><br>

  <%=label_tag :password%><br>
  <%=password_field_tag :password%><br><br>

  <%=label_tag :password_confirmation%><br>
   <%=password_field_tag :password_confirmation%><br><br>


  <%=submit_tag "Log In"%>

<%end%>


