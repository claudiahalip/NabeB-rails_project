<%=form_for @business do |f| %>
  <%=f.label :business_name%><br>
  <%=f.text_field :name%><br><br>

  <%=f.label :category%><br>
  <%=f.collection_select :category_id, Category.all, :id,  :name %><br><br>

  <%=f.label :neighborhood%><br>
  <%=f.collection_select :neighborhood_id, Neighborhood.all, :id,  :name %><br><br>


  <%=f.label :description%><br>
  <%=f.text_area :description%><br><br>

  <%=f.label :website%><br>
  <%=f.text_field :website%><br><br>

  <%=f.label :phone_number%><br>
  <%=f.text_field :phone_number%><br><br>



  <%=f.submit%>

<%end %>