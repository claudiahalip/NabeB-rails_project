<h2><%=display_businesses_header(@neighborhood)%></h2>

<%= form_tag('/businesses', method: 'get') do %>
  <%=text_field_tag(:q)%> 
  <%=submit_tag("Search for a business by category")%>
<%end%>
<br>

<div  class = "navbar">
   <%=link_to "See all nabes", neighborhoods_path%>
 </div>

<ul class="business-cards" >
 <%@businesses.each do |b|%>
    <li><%=link_to b.name, business_path(b), class: "internal"%></li>
    <br>
 <%end%>
 </ul>
  


 